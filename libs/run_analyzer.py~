from archaeology_analyzer import ArchaeologyAnalyzer
import argparse

parser = argparse.ArgumentParser()
parser.add_argument("--csv", default="DataSets1234.csv")
parser.add_argument("--labels", default="feature_labels.json")
parser.add_argument("--config", default="plots_config.json")
args = parser.parse_args()

analyzer = ArchaeologyAnalyzer(csv_path=args.csv, label_path=args.labels, config_path=args.config)

# Run full pipeline
analyzer.run_classifiers()
analyzer.plot_feature_importance()
analyzer.run_clustering()
analyzer.generate_plots_from_config()
